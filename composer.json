{
  "name": "wanderer/php-http-framework",
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "Framework\\": "src/Framework/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\App\\": "tests/App/",
      "Test\\Framework\\": "tests/Framework/",
      "Test\\DetectLang\\": "tests/DetectLang/"
    },
    "files": [
      "src/Framework/Http/createServerRequestFromGlobals.php",
      "src/DetectLang/detectLang.php",
      "src/Framework/Http/emitResponseToSapi.php"
    ]
  },
  "authors": [
    {
      "name": "Wanderer"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^12.2",
    "friendsofphp/php-cs-fixer": "^3.85",
    "vimeo/psalm": "^6.13",
    "psalm/plugin-phpunit": "^0.19.5",
    "symfony/var-dumper": "^7.3"
  },
  "scripts": {
    "test": "phpunit",
    "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
    "psalm": "psalm --config=psalm.xml"
  }
}
